<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox fx:id="vbox" prefHeight="500" prefWidth="624.0" style="-fx-background-color: black;" stylesheets="css2.css" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ru.geekbrains.chat.client.MainChatController">
    <children>
        <MenuBar style="-fx-background-color: black;">
            <Menu style="-fx-background-color: white;" text="File">
                <MenuItem onAction="#mockAction" text="Item1" />
                <MenuItem onAction="#mockAction" text="Item2" />
                <MenuItem onAction="#mockAction" text="Item3" />
                <MenuItem onAction="#mockAction" text="Item4" />
                <MenuItem onAction="#exit" text="Exit" />
            </Menu>
            <Menu style="-fx-background-color: white;" text="Edit">
                <MenuItem onAction="#mockAction" text="Item1" />
                <MenuItem onAction="#mockAction" text="Item2" />
                <MenuItem onAction="#mockAction" text="Item3" />
                <MenuItem onAction="#mockAction" text="Item4" />
                <MenuItem onAction="#mockAction" text="Item5" />
            </Menu>
            <Menu style="-fx-background-color: white;" text="View">
                <MenuItem onAction="#mockAction" text="Item1" />
                <MenuItem onAction="#mockAction" text="Item2" />
                <MenuItem onAction="#mockAction" text="Item3" />
                <MenuItem onAction="#mockAction" text="Item4" />
                <MenuItem onAction="#mockAction" text="Item5" />
            </Menu>
            <Menu style="-fx-background-color: white;" text="Help">
                <MenuItem onAction="#mockAction" text="Item1" />
                <MenuItem onAction="#mockAction" text="Item2" />
                <MenuItem onAction="#mockAction" text="Item3" />
                <MenuItem onAction="#showHelp" text="Help" />
                <MenuItem onAction="#showAbout" text="About" />

            </Menu>
            <VBox.margin>
                <Insets left="3.0" top="6.0" />
            </VBox.margin>

        </MenuBar>
        <HBox>
            <TextField fx:id="loginField" promptText="Enter login..." style="-fx-border-color: black; -fx-border-radius: 4; -fx-background-color: #eaeaea;">
                <HBox.margin>
                    <Insets left="8.0" top="4.0" />
                </HBox.margin></TextField>
            <PasswordField fx:id="passwordField" promptText="Enter password..." style="-fx-border-color: black; -fx-border-radius: 4; -fx-background-color: #eaeaea;">
                <HBox.margin>
                    <Insets top="4.0" />
                </HBox.margin></PasswordField>
            <Button fx:id="btnSendAuth" onAction="#sendAuth" style="-fx-background-color: #ff9900;" text="Log In">
                <font>
                    <Font name="System Bold" size="12.0" />
                </font>
                <HBox.margin>
                    <Insets left="4.0" top="4.0" />
                </HBox.margin></Button>
        </HBox>
        <HBox prefHeight="471.0" prefWidth="705.0" VBox.vgrow="ALWAYS">
            <TextArea fx:id="usersChatArea" editable="false" nodeOrientation="LEFT_TO_RIGHT" prefHeight="373.0" prefWidth="258.0" style="-fx-border-color: white;" styleClass="usersChatArea" stylesheets="css2.css" HBox.hgrow="ALWAYS" VBox.vgrow="ALWAYS">
                <HBox.margin>
                    <Insets left="8.0" />
                </HBox.margin>
                <padding>
                    <Insets right="3.0" />
                </padding>



                <font>
                    <Font size="18.0" />
                </font>
                <opaqueInsets>
                    <Insets left="3.0" />
                </opaqueInsets></TextArea>
            <TextArea fx:id="myChatArea" editable="false" nodeOrientation="RIGHT_TO_LEFT" prefHeight="461.0" prefWidth="256.0" style="-fx-border-color: white;" styleClass="myChatArea" stylesheets="css2.css" HBox.hgrow="ALWAYS" VBox.vgrow="ALWAYS">

                <HBox.margin>
                    <Insets />
                </HBox.margin>
                <padding>
                    <Insets right="3.0" />
                </padding>

                <font>
                    <Font size="18.0" />
                </font>
            </TextArea>

            <ListView fx:id="onlineUsers" prefHeight="369.0" prefWidth="133.0" style="-fx-background-color: #c4c4c4;">
                <HBox.margin>
                    <Insets left="10.0" right="5.0" />
                </HBox.margin>
            </ListView>
            <padding>
                <Insets bottom="5.0" top="5.0" />
            </padding>

        </HBox>
        <HBox>
            <TextField fx:id="inputField" onAction="#sendMessage" prefHeight="70.0" prefWidth="487.0" promptText="Write your message..." style="-fx-background-color: #eaeaea;" HBox.hgrow="ALWAYS">
                <HBox.margin>
                    <Insets bottom="1.0" left="8.0" right="5.0" top="1.0" />
                </HBox.margin>
                <font>
                    <Font size="24.0" />
                </font>
            </TextField>
            <Button fx:id="btnSendMessage" onAction="#sendMessage" prefHeight="70.0" prefWidth="124.0" style="-fx-background-color: #ff9900;" text="SEND">
                <HBox.margin>
                    <Insets left="5.0" right="5.0" />
                </HBox.margin>
                <font>
                    <Font name="System Bold" size="25.0" />
                </font>
            </Button>
            <padding>
                <Insets bottom="5.0" top="5.0" />
            </padding>
        </HBox>
    </children>
</VBox>
